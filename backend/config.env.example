# ====================================
# VANTOR CASINO - BACKEND CONFIGURATION
# ====================================

# Server Configuration
NODE_ENV=development
PORT=6000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vantor-casino

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_EXPIRE=7d

# ====================================
# SLOTS PROVIDER API CONFIGURATION
# ====================================

# B2B Slots API URLs
SLOTS_API_BASE_URL=https://int.apichannel.cloud
SLOTS_API_FALLBACK_URL=https://icdnchannel.com

# Your operator credentials
OPERATOR_ID=0

# Callback URL for game events
CALLBACK_URL=https://api.vantorgame.site/api/

# ====================================
# LAVA TOP PAYMENT SYSTEM
# ====================================

# Lava Top API Configuration
LAVA_TOP_API_URL=https://dev.lava.ru/
LAVA_TOP_SHOP_ID=your-shop-id-from-lava-top
LAVA_TOP_API_KEY=your-secret-api-key-from-lava-top

# ====================================
# EMAIL CONFIGURATION
# ====================================

# SMTP Settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email templates
FROM_EMAIL=noreply@vantorcasino.com
FROM_NAME=Vantor Casino

# ====================================
# REDIS CONFIGURATION (OPTIONAL)
# ====================================

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# SECURITY CONFIGURATION
# ====================================

# Password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# CORS origins (comma separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ====================================
# FILE UPLOAD CONFIGURATION
# ====================================

# File upload settings
MAX_FILE_SIZE=50mb
UPLOAD_PATH=uploads/

# Allowed file types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword

# ====================================
# LOGGING CONFIGURATION
# ====================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ====================================
# ADDITIONAL INTEGRATIONS
