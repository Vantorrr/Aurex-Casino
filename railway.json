{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "postgres",
      "source": {
        "image": "postgres:16-alpine"
      },
      "variables": {
        "POSTGRES_USER": "aurex",
        "POSTGRES_PASSWORD": "aurex_secure_password_change_this",
        "POSTGRES_DB": "aurex_casino"
      }
    },
    {
      "name": "backend",
      "source": {
        "repo": "Vantorrr/Aurex-Casino",
        "branch": "main",
        "directory": "backend"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install"
      },
      "deploy": {
        "startCommand": "npm run setup && npm start",
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE"
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": "6000",
        "JWT_SECRET": "change-this-to-random-secret-key-in-production-min-32-chars",
        "FRONTEND_URL": "${{frontend.url}}"
      },
      "serviceReferences": {
        "DATABASE_URL": "${{postgres.DATABASE_URL}}"
      }
    },
    {
      "name": "frontend",
      "source": {
        "repo": "Vantorrr/Aurex-Casino",
        "branch": "main",
        "directory": "frontend"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "startCommand": "npm start"
      },
      "variables": {
        "NEXT_PUBLIC_API_URL": "${{backend.url}}",
        "NEXT_PUBLIC_SITE_URL": "${{frontend.url}}"
      }
    }
  ]
}
